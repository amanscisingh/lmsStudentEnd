<style>
    .card{
        border: 0.5px solid rgb(194, 189, 189);
        height: 300px;
        border-radius: 5px;
        margin: 10px;
        width: 300px;
        margin-top: 30px;

        font-family: sans-serif;    
    }
    .card:hover{
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;      
    }
    .data{
        padding: 2px;

    }
    img {
        border-radius: 50px;
        margin-top: 10px;
        position: relative;
        top: 0%;
        left: 31%;
        z-index: 1;

    }
    .upperPart{
        {{!-- background-color: '#' + Math.floor(Math.random()*16777215).toString(16); --}}
        background-image: linear-gradient(rgb(205, 218, 132), white);
        color: rgb(44, 24, 24);
        border-radius: 5px;
        text-align: center;
        padding: 15px;
    }
    .lowerPart{
        padding: 30px;
        display: flex;
        overflow-y: scroll;
        margin-bottom: 20px ;
    }
    .nameAndPhoto{
        display: flex;
        padding: 20px;
    }
    .description{
        {{!-- overflow-y: scroll; --}}
        height: 110px;
    }
    ::-webkit-scrollbar {
    width: 0;  /* Remove scrollbar space */
    background: transparent;  /* Optional: just make scrollbar invisible */
  }
.delete_class_code{
    display: flex;
    border: 2px solid red;
    margin-left: 10%;
}
.delete{
    margin-left: 15%;
    border: 2px solid red;
}
.delete:hover{
    cursor: pointer;
}
.box {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    grid-gap: .5rem;
    margin: 5%;
}

</style>


<div class="box">
{{#each allClasses}}

    <div class="card" id="card-{{@key}}">
        <div class="upperPart">
            <div class="delete_class_code">
            <div class="data" id="class-{{@key}}">{{this.classCode}}</div><div class="delete" onclick="editCard({{@key}})">ðŸ› </div>
            </div>
            <div class="data">{{this.className}}</div>
            <div class="data">{{this.classTeacher}}</div>
            <div>
                <hr>
                
            </div>
            
        </div>
        
        <div class="lowerPart">
            <div class="data description">{{this.classDescription}}</div>
            <div class="data">{{this.classTeacherId}}</div>
            
            
        </div>

        <br><br>
    </div>
{{/each}}
</div>

<script>
    function editCard(key){
        console.log(key);
        let id = `class-${key}`;
        console.log(id);
        location.assign('/teacherDashboard/'+document.getElementById(id).innerHTML);
    }
</script>